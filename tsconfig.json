{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".", // Add this line to set the base URL for module resolution
    "paths": {
      // Add this configuration to map the '~' alias to the 'src' folder
      "~/*": ["src/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/types/**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts"]
}
